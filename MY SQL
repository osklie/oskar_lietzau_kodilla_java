
CREATE TABLE ISSUESLISTS
(
    ID SERIAL PRIMARY KEY,
    NAME  VARCHAR(100)
);

CREATE TABLE ISSUES
(
    ID SERIAL PRIMARY KEY,
    ISSUESLIST_ID BIGINT UNSIGNED NOT NULL,
    SUMMARY VARCHAR(100),
    DESCRIPTION VARCHAR(100),
    USER_ID_ASSIGNEDTO VARCHAR(100)
);

SELECT * FROM ISSUESLISTS;

