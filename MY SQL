___________________________________________________________________________;

SELECT I.SUMMARY, T.NAME
FROM ISSUES I
JOIN ISSUESLISTS T;

SELECT I.SUMMARY, U.LASTNAME
FROM ISSUES I
JOIN USERS U;

SELECT  U.FIRSTNAME, U.LASTNAME, I.SUMMARY
FROM USERS U
JOIN ISSUES I;

COMMIT;
